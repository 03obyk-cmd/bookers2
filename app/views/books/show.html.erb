<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render "users/info", user: @book.user %>
      <%= render "books/form", book: Book.new %>
    </div>

    <div class="col-md-9">
      <h2>Book detail</h2>

      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book) %>
        |
        <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" } %>
      <% end %>
    </div>

  </div>
</div>