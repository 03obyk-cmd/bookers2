<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">

      <h2>Editing Book</h2>

      <%= form_with model: @book, class: "w-100" do |f| %>
        <p>Title<br>
        <%= f.text_field :title, class: "form-control" %></p>

        <p>Opinion<br>
        <%= f.text_area :body, class: "form-control" %></p>

        <p><%= f.submit 'Update Book', class: "btn btn-success" %></p>
      <% end %>

      <%= link_to 'Show', book_path(@book) %>
      |
      <%= link_to 'Back', books_path %>

    </div>
  </div>
</div>