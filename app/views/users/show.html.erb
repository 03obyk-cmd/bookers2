<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render "users/info", user: @book.user %>
      <%= render "books/form", book: Book.new %>
    </div>

    <div class="col-md-9">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>