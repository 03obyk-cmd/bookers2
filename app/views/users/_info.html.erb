<h2>User info</h2>

<div>
  <%= image_tag "no_image.jpg", size: "100x100" %>
</div>

<table>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>

<%= link_to edit_user_path(user), class: "btn btn-outline-secondary" do %>
  <i class="fas fa-user-cog"></i>
<% end %>